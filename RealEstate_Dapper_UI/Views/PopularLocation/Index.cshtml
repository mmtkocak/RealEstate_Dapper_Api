@model List<ResultPopularLocationDto>
@{
    ViewData["Title"] = "Popüler Lokasyonlar";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Popüler Lokasyonlar</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Şehir Adı</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td><img src="/cityimages/@item.ImageUrl" width="50" height="50" style="border-radius:50%" />   @item.CityName</td>

                                    <td><a href="/PopularLocation/DeletePopularLocation/@item.LocationID" onclick="return confirm('Silmek istediğinizden emin misiniz?')" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/PopularLocation/UpdatePopularLocation/@item.LocationID" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/PopularLocation/CreatePopularLocation/" class="btn btn-outline-primary">Yeni Lokasyon Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>
